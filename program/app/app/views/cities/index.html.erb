<p id="notice"><%= notice %></p>

<h1>Selected City</h1>

<% if @default.nil? %>
  <%= render 'select_city' %>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Time</th>
        <th>Time Status </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @default.name %></td>
          <td><%= @default.time.to_s %></td>
          <td><%= @default.time_status %>
        </tr>
    </tbody>
  </table>
<% end %>


<h1>Cities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time</th>
      <th>Time Status</th>
      <th>Time Difference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <% if !city.default %>
          <td><%= city.name %></td>
          <td><%= city.time.to_s %></td>
          <td><%= city.time_status %></td>
          <td><%= city.time_difference.to_s %></td>
          <td><%= link_to 'Show', city %></td>
          <td><%= link_to 'Edit', edit_city_path(city) %></td>
          <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path %>
